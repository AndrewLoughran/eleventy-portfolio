<nav id="mainnav" class="mainnav" aria-label="{{ meta.navigation.ariaTop }}">
  <ul class="cluster" role="list" no-flash>
    {% for item in navigation.top %}
      <li>
        <a
          href="{{ item.url }}"
          {{ helpers.getLinkActiveState(item.url, page.url) | safe }}
          >{{ item.text }}</a
        >
      </li>
    {% endfor %}
  </ul>
</nav>